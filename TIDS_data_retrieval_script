#!/bin/bash

# UM

tids=/group_workspaces/jasmin2/tids

cd $basedir

outfile=TIDS_files_to_retrieve

echo \#\#\#\#\# > $outfile

for dir in $(UM/ancil/atmos/n96e UM/ancil/atmos/n216e OCEAN)

    do 

        echo $i 
        echo $dir

    echo \#\#\#\#\#>> $outfile
    echo \#$dir >> $outfile
    echo \#\#\#\#\#>> $outfile

    find $dir -name "[!.]*" -type f >> $outfile 

    paste $outfile $outfile > 2_column_$outfile

done

mv /group_workspaces/jasmin2/tids/2_column_$outfile ~/scripts/
rm $tids/$outfile
cd ~/scripts
