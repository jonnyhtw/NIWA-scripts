#!/bin/bash

# UM

tids=/group_workspaces/jasmin2/tids

cd $tids

outfile=TIDS_files_to_retrieve

echo \#\#\#\#\# > $outfile

dir[1]=UM/ancil/atmos/n96e
dir[2]=UM/ancil/atmos/n216e
dir[3]=OCEAN
#dir4 etc
#i am sure there is a better way of doing this but this is fine for now!

for i in {1..3}

    do 

        echo 'i am now in ' $PWD
        echo $i 
        echo ${dir[$i]}

    echo \#\#\#\#\#>> $outfile
    echo \#${dir[$i]} >> $outfile
    echo \#\#\#\#\#>> $outfile

    find ${dir[$i]} -name "[!.]*" -type f >> $outfile 

    paste $outfile $outfile > 2_column_$outfile

done

mv /group_workspaces/jasmin2/tids/2_column_$outfile ~/scripts/
rm $tids/$outfile
cd ~/scripts
